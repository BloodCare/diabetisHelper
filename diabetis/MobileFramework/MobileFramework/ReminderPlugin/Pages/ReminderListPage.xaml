<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="MobileFramework.ReminderPlugin.ReminderListPage">
	<StackLayout Orientation="Vertical">
		<ListView ItemsSource="{Binding ReminderList}" SelectedItem="{Binding SelectedReminder}">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.View>
							<StackLayout Padding="10" Orientation="Horizontal" HorizontalOptions="StartAndExpand">
								<Label VerticalOptions="Center" Text="{Binding Name}" HorizontalOptions="StartAndExpand" />
								<Switch IsToggled="{Binding isActive}" HorizontalOptions="End" />
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
		<StackLayout Orientation="Horizontal">
		<Button x:Name="btnAddReminder" Command="{Binding AddReminder}" Text="Add Reminder" />
		<Button x:Name="btnAddReminderToCalender" Command="{Binding AddReminderToCalender}" Text="Add Appointment To Calander" />
		<Button Text="Add Emergency Reminder" />		
		</StackLayout>
		</StackLayout>
</ContentPage>